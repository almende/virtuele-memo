<?xml version='1.0' encoding='utf-8'?>
<widget id="com.almende.VirtualMemo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="BluetoothLePlugin">
        <param name="android-package" value="com.randdusing.bluetoothle.BluetoothLePlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <name>VirtualMemo</name>
    <description>
        A "virtual memo", an application for the WOTS conference that can afterwards be used to leave electronic message on a iBeacon-like device that can be attached to a fridge.
    </description>
    <author email="anne@dobots.nl" href="https://dobots.nl">
        Anne van Rossum
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <icon src="www/img/logo.png" />
    <icon density="ldpi" platform="android" src="www/img/logo.png" />
    <icon density="mdpi" platform="android" src="www/img/logo.png" />
    <icon density="hdpi" platform="android" src="www/img/logo.png" />
    <icon density="xhdpi" platform="android" src="www/img/logo.png" />
    <feature name="AttendeaseBeacons">
        <param name="android-package" value="com.attendease.ibeacons.AttendeaseBeacons" />
        <param name="onload" value="true" />
    </feature>
</widget>
